<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 my-5 mx-auto">
    <h2 class="mt-5">ユーザー</h2>
      <table class='table table-bordered'>
        <thead>
          <tr>
            <th>プロフィール画像</th>
            <th>ユーザー名</th>
            <th>ステータス</th>
            <th>編集</th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
            <td><%= link_to user.name, admin_user_path(user.id) %></td>
            <td>
              <% if user.is_deleted == false %>
                有効
              <% else %>
                退会済
              <% end %>
            </td>
            <td><%= link_to "編集", edit_admin_user_path(user.id), class: "btn btn-success" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      
      <div class="col-5 mx-auto my-5 pb-5">
        <%= paginate @users, theme: 'twitter-bootstrap-4' %>
      </div>
    </div>
  </div>
</div>
    