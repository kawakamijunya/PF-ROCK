<table class='table table-bordered'>
  <thead>
    <tr>
      <th>プロフィール画像</th>
      <th>ユーザー名</th>
      <th>フォロー</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= link_to user.name, public_user_path(user.id) %></td>
        <td><%= render 'public/relationships/btn', user: user %></td>
        <td>
          <% if user.is_deleted == false %>
            有効
          <% else %>
            退会済
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="col-5 mx-auto mb-5">
  <%= paginate users, theme: 'twitter-bootstrap-4' %>
</div>
