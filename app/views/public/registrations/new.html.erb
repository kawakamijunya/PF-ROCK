<div class="containar mb-5">
  <div class="row no-gutters">
    <div class="col-md-3 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
    <h2 class="mb-2 text-center" style="border-left: solid 5px #f00; padding: 0.25em 0.5em;">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field p-2", style: "width:100%">
        <%= f.label :ユーザーネーム %><br>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="field p-2">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field p-2">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
      </div>

      <div class="field p-2">
        <%= f.label :パスワード確認 %><br />
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
      </div>

      <div class="actions mt-2 p-2">
        <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
      </div>
    <% end %>
    
      <div class="actions p-2">
        <%= render "public/shared/links" %>
      </div>

    </div>
  </div>
</div>





