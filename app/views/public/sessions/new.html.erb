<div class="containar mb-5">
  <div class="row no-gutters">
    <div class="col-md-3 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h2 class="my-1" style="border-left: solid 5px #f00; padding: 0.25em 0.5em;">ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <div class="field p-2">
        <%= f.label :メールアドレス %><br>
        <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field p-2">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
    　　　<div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions mb-3 p-2">
        <%= f.submit "ログイン" %>
      </div>
      
      <% end %>

      <%= render "public/shared/links" %>
      
    </div>
  </div>
</div>
